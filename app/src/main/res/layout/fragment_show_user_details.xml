<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShowUserDetailsFragment">

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ProgressBar>

    <ImageView
        android:id="@+id/vi"
        android:src="@drawable/download"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_marginTop="20dp"
        android:layout_height="120dp">

    </ImageView>

    <TextView
        android:id="@+id/nameTv"
        android:layout_below="@+id/vi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/nameTv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:id="@+id/emailTv"
            android:layout_below="@+id/vi"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:id="@+id/dobTv"
            android:layout_below="@+id/vi"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:id="@+id/genderTv"
            android:layout_below="@+id/vi"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_height_24"
            android:id="@+id/heightTv"
            android:layout_below="@+id/vi"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_sports_baseball_24"
            android:id="@+id/sportTv"
            android:layout_below="@+id/vi"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>

    <Button
        android:enabled="false"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/actionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnshape"
        android:textAllCaps="false"
        android:fontFamily="@font/custom"
        android:textSize="18sp">

    </Button>




</RelativeLayout>